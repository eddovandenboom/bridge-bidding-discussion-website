bridgetalk.app {
    handle /api/* {
        reverse_proxy backend:3001
    }

    handle /tournaments/* {
        reverse_proxy backend:3001
    }

   handle_path /db-ui/* {
       uri strip_prefix /db-ui
       reverse_proxy db-ui:5555
   }

    # Fallback for the frontend application
    handle {
        reverse_proxy frontend:5173 {
            header_up Host {host}
        }
    }
}

